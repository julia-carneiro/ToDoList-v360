<%= form_with(model: list, class: "max-w-lg mx-auto p-6") do |form| %>
 <% if list.errors.any? %>
   <div class="bg-rose-50 text-rose-600 p-4 rounded-lg mb-6">
     <h2 class="font-medium mb-2"><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>
     <ul class="list-disc list-inside">
       <% list.errors.each do |error| %>
         <li class="text-sm"><%= error.full_message %></li>
       <% end %>
     </ul>
   </div>
 <% end %>

 <div class="space-y-6">
   <div>
     <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
     <%= form.text_field :name, 
         class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-rose-200 focus:border-rose-300 transition duration-150",
         placeholder: "Enter list name" %>
   </div>

   <div>
     <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
     <%= form.text_area :description,
         rows: 4,
         class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-rose-200 focus:border-rose-300 transition duration-150",
         placeholder: "Enter list description" %>
   </div>

   <div class="flex justify-end">
     <%= form.submit class: "px-4 py-2 bg-rose-500 text-white rounded-lg hover:bg-rose-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rose-300 transition duration-150" %>
   </div>
 </div>
<% end %>