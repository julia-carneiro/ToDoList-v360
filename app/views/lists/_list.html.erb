<%# app/views/lists/_list.html.erb %>
<div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-200">
  <div class="mb-4">
    <h2 class="font-semibold text-lg"><%= list.name %></h2>
    <p class="text-gray-600"><%= list.description %></p>
  </div>

  <div class="flex justify-between items-center">
    <div data-controller="modal">
      <!-- Edit button -->
      <button data-action="modal#open" class="text-gray-600 hover:text-gray-800 flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit
      </button>

      <!-- Edit Modal -->
      <div data-modal-target="modal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50" data-action="click->modal#closeBackground">
        <div class="relative mx-auto max-w-md w-full">
          <div class="bg-white rounded-2xl shadow-lg p-8">
            <div class="text-center mb-8">
              <h2 class="text-rose-500 text-3xl font-bold tracking-tight">
                Edit List
              </h2>
              <p class="mt-2 text-sm text-gray-500">
                Update your list details
              </p>
            </div>
            <!-- Render form -->
            <%= render 'form', list: list %>
          </div>
        </div>
      </div>
    </div>
        
    <!-- Link to visualize tasks -->
    <%= link_to list_tasks_path(list), class: "text-blue-600 hover:text-blue-800 flex items-center gap-2" do %>
      View Tasks
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    <% end %>
  </div>
</div>