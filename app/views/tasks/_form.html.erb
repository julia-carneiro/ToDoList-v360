<%= form_with(model: [@list, task]) do |form| %>
  <% if @task&.errors&.any? %>
    <div class="mb-4 p-4 bg-red-100 text-red-700 rounded-lg">
      <h3 class="font-semibold"><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h3>
      <ul class="list-disc list-inside">
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col sm:flex-row sm:items-center gap-4">
    <%= form.text_field :title,
      required: true,
      autofocus: true,
      placeholder: "Add new task",
      class: "flex-1 px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-md" %>

    <%= form.submit "Save Task", 
      class: "px-4 py-2 bg-rose-500 text-white rounded-lg hover:bg-rose-700 transition-colors duration-200" %>
  </div>
<% end %>
