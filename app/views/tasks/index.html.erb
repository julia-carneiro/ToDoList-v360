<div class="w-full py-4 min-h-screen">
  <div class="w-full px-4 sm:px-6 lg:px-8">
    <% if notice.present? %>
      <div class="mb-4 p-4 bg-green-100 text-green-700 rounded-lg">
        <%= notice %>
      </div>
    <% end %>

    <div class="flex items-center justify-between mb-6">
      <%= link_to lists_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900 transition-colors duration-200" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Lists
      <% end %>
    </div>

    <h1 class="text-3xl font-bold text-gray-900 mb-8">Tasks</h1>
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <%= form_with(model: [@list, Task.new], class: "space-y-6", remote: true) do |form| %>
        <% if @task&.errors&.any? %>
          <div class="mb-4 p-4 bg-red-100 text-red-700 rounded-lg">
            <h3 class="font-semibold"><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h3>
            <ul class="list-disc list-inside">
              <% @task.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="flex items-center space-x-2">

          <%= form.text_field :title,
            required: true,
            autofocus: true,
            placeholder: "Add new task",
            class: "flex-1 px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          

          <%= form.submit "Save Task", 
            class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200" %>
        </div>
        
      <% end %>
    </div>

    <!-- Lista de Tarefas -->
    <div class="space-y-4 w-full" id="tasks">
      <% @tasks.each do |task| %>
        <div id="task_<%= task.id %>" class="task bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 <%= 'bg-gray-50' if task.completed %>">
          <div class="p-6">
            <div class="flex items-center justify-between">
              <div class="flex items-center flex-1 gap-4">
                <%= button_to list_task_path(@list, task, completed: !task.completed),
                    method: :patch,
                    class: "flex-shrink-0" do %>
                  <div class="w-6 h-6 rounded-full border-2 <%= task.completed ? 'bg-green-500 border-green-500' : 'border-gray-300' %> flex items-center justify-center">
                    <% if task.completed %>
                      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>  
                    <% end %>
                  </div>
                <% end %>

                <div class="<%= 'line-through text-gray-500' if task.completed %>">
                  <%= render task %>
                </div>
              </div>
              
              <div class="flex items-center gap-2">
                <%= link_to list_task_path(@list, task), 
                    class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200 transition-colors duration-200" do %>
                  View Details
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
