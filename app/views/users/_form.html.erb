<%= form_with model: user, local: true do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :email_address , class: "block font-bold mb-2" %>
    <%= form.email_field :email_address , class: "w-full px-3 py-2 border rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :password, class: "block font-bold mb-2" %>
    <%= form.password_field :password, class: "w-full px-3 py-2 border rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :password_confirmation, class: "block font-bold mb-2" %>
    <%= form.password_field :password_confirmation, class: "w-full px-3 py-2 border rounded" %>
  </div>

  <div>
    <%= form.submit "Sign Up", class: "py-3 px-6 bg-blue-500 text-white rounded-lg" %>
  </div>
<% end %>
