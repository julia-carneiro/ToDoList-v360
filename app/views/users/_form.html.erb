<div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8 flex items-center justify-center">
 <div class="max-w-md w-full bg-white rounded-2xl shadow-lg p-8">
   <%= form_with model: user, local: true do |form| %>
     <% if alert = flash[:alert] %>
       <p class="py-2 px-3 bg-rose-50 mb-5 text-rose-600 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
     <% end %>

     <div class="text-center mb-8">
      <div class="flex items-center justify-between mb-4">
        <%= link_to new_session_path, class: "text-gray-500 hover:text-gray-700 transition duration-150" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
        <% end %>
        <h2 class="text-rose-500 text-4xl font-bold text-gray-700 tracking-tight flex-grow">
          Welcome!
        </h2>
        <div class="w-6"></div>
      </div>
      <p class="mt-2 text-sm text-gray-500">
        Join us and start organizing your life today!
      </p>
    </div>

     <div class="space-y-6">
       <div>
         <%= form.label :username, class: "block text-sm font-medium text-gray-700" %>
         <%= form.text_field :username,
             required: true,
             autofocus: true,
             placeholder: "Your username",
             class: "mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-200 focus:border-blue-300 transition duration-150" %>
       </div>

       <div>
         <%= form.label :email_address, class: "block text-sm font-medium text-gray-700" %>
         <%= form.email_field :email_address,
             required: true,
             placeholder: "you@example.com",
             class: "mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-200 focus:border-blue-300 transition duration-150" %>
       </div>

       <div>
         <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
         <%= form.password_field :password,
             required: true,
             placeholder: "••••••••",
             class: "mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-200 focus:border-blue-300 transition duration-150" %>
       </div>

       <div>
         <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
         <%= form.password_field :password_confirmation,
             required: true,
             placeholder: "••••••••",
             class: "mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-200 focus:border-blue-300 transition duration-150" %>
       </div>

       <%= form.submit "Sign Up",
           class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-rose-500 hover:bg-rose-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-300 transition duration-150" %>
     </div>
   <% end %>

   <div class="mt-8 text-center">
     <p class="text-sm text-gray-500">
       Already have an account?
       <%= link_to "Sign In",
           new_session_path,
           class: "font-medium text-rose-400 hover:text-rose-500 hover:underline transition duration-150" %>
     </p>
   </div>
 </div>
</div>